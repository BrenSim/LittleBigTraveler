@model List<LittleBigTraveler.Models.TravelClasses.Package>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Liste des voyages sur mesure";
}

@section content {
    <h1 class="text-center">Liste des voyages sur mesure</h1>

    @if (Model.Count == 0)
    {
        <p>Aucun voyage sur mesure trouvé.</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Destination</th>
                    <th>Description</th>
                    <th>Lieu de départ</th>
                    <th>Date de départ</th>
                    <th>Date de retour</th>
                    <th>Nombre de participant</th>
                    <th>Prix</th>
                    <th>Nombre de places disponibles</th>
                    <th>Image</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var package in Model)
                {
                    <tr>
                        <td>@package.Name</td>
                        <td>@package.Travel.Destination.City, @package.Travel.Destination.Country</td>
                        <td>@package.Description</td>
                        <td>@package.Travel.DepartureLocation</td>
                        <td>@package.Travel.DepartureDate</td>
                        <td>@package.Travel.ReturnDate</td>
                        <td>@package.Travel.NumParticipants</td>
                        <td>@package.Price</td>
                        <td>@package.QuantityAvailable</td>
                        <td>
                            @foreach (var image in @package.Travel.Destination.Images)
                            {
                                <img src="@image" alt="Image" class="img-thumbnail" />
                            }
                        </td>

                        <td>
                            <a href="/Package/EditPackage/@package.Id" class="btn btn-primary">Modifier Package</a>
                            <a href="/Travel/ModifyTravel/@package.Id" class="btn btn-secondary">Modifier Voyage</a>
                            <a href="/Package/DeletePackage/@package.Id" class="btn btn-danger">Supprimer</a>
                            <a href="/Booking/Create?packageId=@package.Id" class="btn btn-success">Select</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <div class="text-center mt-4">
        <a href="/Home/IndexTEST" class="btn btn-primary">Accueil</a>
    </div>
}
