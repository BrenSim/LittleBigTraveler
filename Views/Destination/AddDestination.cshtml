@model LittleBigTraveler.ViewModels.DestinationViewModel

@{
    ViewData["Title"] = "Ajouter une destination";
    Layout = "_Layout";
}

<div class="container">
    <h1 class="text-center">Ajouter une destination</h1>

    <form method="post" action="/Destination/AddDestinations">
        <div class="form-group">
            <label for="Country">Pays :</label>
            <input type="text" id="Country" name="Country" class="form-control" required />
        </div>

        <div class="form-group">
            <label for="City">Ville :</label>
            <input type="text" id="City" name="City" class="form-control" required />
        </div>

        <div class="form-group">
            <label for="Description">Description :</label>
            <textarea id="Description" name="Description" class="form-control" required></textarea>
        </div>

        <div class="form-group">
            <label for="Style">Style :</label>
            <input type="text" id="Style" name="Style" class="form-control" required />
        </div>

        <div class="form-group">
            <label for="Images">Images :</label>
            <input type="file" id="Images" name="Images" class="form-control-file" multiple />
        </div>

        <div class="form-group">
            <label for="ExternalLinks">Lien externe :</label>
            <input type="text" id="ExternalLinks" name="ExternalLinks" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-primary">Ajouter</button>
    </form>
</div>
