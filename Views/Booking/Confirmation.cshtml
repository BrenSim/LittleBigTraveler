@model List<LittleBigTraveler.Models.TravelClasses.Booking>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Confirmation de réservation";
}

@section content {
    <h1 class="text-center">Confirmation de réservation</h1>

    @if (Model.Count == 0)
    {
        <p>Aucune réservation trouvée.</p>
    }
    else
    {
        @foreach (var booking in Model)
        {
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Réservation n° @booking.Id</h5>
                    <p class="card-text">Package : @booking.Package.Name</p>
                    <p class="card-text">Description : @booking.Package.Description</p>
                    <p class="card-text">Prix : @booking.Package.Price €</p>
                </div>
            </div>
        }
    }

    <div class="text-center mt-4">
        <a href="/Booking/List" class="btn btn-primary">Retour à la liste des réservations</a>
    </div>
}
