@model List<AllInclusiveTravelViewModel>

<h1>List of All Inclusive Travels</h1>

@if (Model.Count == 0)
{
    <p>No All Inclusive Travels found.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Travel ID</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.TravelId</td>
                    <td>
                        <a href="@Url.Action("ModifyAllInclusiveTravel", new { id = item.Id })">Edit</a> |
                        <a href="@Url.Action("DeleteAllInclusiveTravel", new { id = item.Id })">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
