@model List<LittleBigTraveler.Models.TravelClasses.AllInclusiveTravel>

@{
    Layout = "_Layout";
    ViewData["Title"] = "List of All Inclusive Travels";
}

@section content {
    <h1 class="text-center">List of All Inclusive Travels</h1>

    @if (Model.Count == 0)
    {
        <p>No All Inclusive Travels found.</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Travel ID</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.TravelId</td>
                        <td>
                            <a href="@Url.Action("ModifyAllInclusiveTravel", new { id = item.Id })" class="btn btn-secondary">Edit</a>
                            <a href="@Url.Action("DeleteAllInclusiveTravel", new { id = item.Id })" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <div class="text-center mt-4">
        <a href="/Home/Index" class="btn btn-primary">Back to Home</a>
    </div>
}
