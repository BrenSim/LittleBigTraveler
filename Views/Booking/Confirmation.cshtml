@model LittleBigTraveler.ViewModels.ConfirmationViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Confirmation de réservation";
}

@section content {
    <h1 class="text-center">Confirmation de réservation</h1>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Réservation n° @Model.BookingId</h5>
            <p class="card-text">Package : @Model.PackageName</p>
            <p class="card-text">Description : @Model.PackageDescription</p>
            <p class="card-text">Prix : @Model.PackagePrice €</p>
        </div>
    </div>

    <div class="text-center mt-4">
        <a href="/Booking/List" class="btn btn-primary">Retour à la liste des réservations</a>
    </div>
}
