@model LittleBigTraveler.ViewModels.ServiceViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Résultats de recherche";
}

@section content {
    <h1 class="text-center">Résultats de recherche</h1>

    @if (Model.Services.Count == 0)
    {
        <p>Aucun résultat trouvé.</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prix</th>
                    <th>Horaire</th>
                    <th>Emplacement</th>
                    <th>Type</th>
                    <th>Images</th>
                    <th>Lien</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var service in Model.Services)
                {
                    <tr>
                        <td>@service.Name</td>
                        <td>@service.Price</td>
                        <td>@service.Schedule</td>
                        <td>@service.Location</td>
                        <td>@service.Type</td>
                        <td>
                            @foreach (var image in service.Images)
                            {
                                <img src="@image" alt="Image" class="img-thumbnail" />
                            }
                        </td>
                        <td>@service.ExternalLinks</td>
                        <td>
                            <a href="/Service/ModifierService/@service.Id" class="btn btn-secondary mr-2">Modifier</a>
                            <a href="/Service/SupprimerService/@service.Id" class="btn btn-danger">Supprimer</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <div class="text-center mt-4">
        <a href="/Home/Index" class="btn btn-primary">Retour à l'accueil</a>
    </div>
}
