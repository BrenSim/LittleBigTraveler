@model AllInclusiveTravelViewModel

@{
    ViewData["Title"] = "Create All Inclusive Travel";
    Layout = "_Layout";
}

<div class="container">
    <h1 class="text-center">Create All Inclusive Travel</h1>

    <form method="post" asp-action="CreateAllInclusiveTravel">
        <input type="hidden" asp-for="TravelId" value="@Model.TravelId" />

        <div class="form-group">
            <label asp-for="Name">Name:</label>
            <input asp-for="Name" name="Name" class="form-control" />

        </div>

        <div class="form-group">
            <label asp-for="Description">Description:</label>
            <textarea asp-for="Description" name="Description" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label>Services:</label>
            <select asp-for="SelectedServiceId" asp-items="Model.Services.Select(s => new SelectListItem { Value = s.Id.ToString(), Text = s.Name })" multiple class="form-control"></select>


        </div>

        <h2 class="text-center">Services disponibles pour la destination</h2>

        <table class="table">
            <thead>
                <tr>
                    <th></th> <!-- pour checkbox -->
                    <th>Nom</th>
                    <th>Prix</th>
                    <th>Horaire</th>
                    <th>Emplacement</th>
                    <th>Type</th>
                    <th>Style</th>
                    <th>Images</th>
                    <th>Liens</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var service in Model.AvailableServices)
                {
                    <tr>
                        <td>
                            <input type="checkbox" id="service-@service.Id" name="SelectedServices" value="@service.Id" @(Model.SelectedServiceId.Contains(service.Id) ? "checked" : "")>
                        </td>
                        <td>@service.Name</td>
                        <td>@service.Price</td>
                        <td>@service.Schedule</td>
                        <td>@service.Location</td>
                        <td>@service.Type</td>
                        <td>@service.Style</td>
                        <td>
                            @foreach (var image in service.Images)
                            {
                                <img src="@image" alt="Image" class="img-thumbnail" />
                            }
                        </td>
                        <td>@service.ExternalLinks</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Créer le voyage</button>
        </div>
    </form>

   
</div>
