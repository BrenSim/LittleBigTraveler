@model LittleBigTraveler.ViewModels.ServiceViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Modification d'un service";
}

@section content {
    <div class="container">
        <h1 class="text-center">Modifier un service</h1>

        <form method="post" action="/Service/ChangeServices/@Model.Id">

            <input type="hidden" name="Id" value="@Model.Id" />

            <div class="form-group">
                <label for="Name">Nom :</label>
                <input type="text" id="Name" name="Name" class="form-control" value="@Model.Name" required />
            </div>

            <div class="form-group">
                <label for="Price">Prix :</label>
                <input type="number" id="Price" name="Price" class="form-control" value="@Model.Price" required />
            </div>

            <div class="form-group">
                <label for="Schedule">Horaire :</label>
                <input type="datetime-local" id="Schedule" name="Schedule" class="form-control" value="@Model.Schedule.ToString("yyyy-MM-ddTHH:mm")" required />
            </div>

            <div class="form-group">
                <label for="Location">Lieu :</label>
                <input type="text" id="Location" name="Location" class="form-control" value="@Model.Location" required />
            </div>

            <div class="form-group">
                <label for="Type">Type :</label>
                <input type="text" id="Type" name="Type" class="form-control" value="@Model.Type" required />
            </div>

            <div class="form-group">
                <label for="MaxCapacity">Capacité maximale :</label>
                <input type="number" id="MaxCapacity" name="MaxCapacity" class="form-control" value="@Model.MaxCapacity" required />
            </div>

            <div class="form-group">
                <label for="Images">Images :</label>
                <input type="file" id="Images" name="Images" class="form-control-file" multiple />
            </div>

            <div class="form-group">
                <label for="Link">Lien externe :</label>
                <input type="text" id="Link" name="Link" class="form-control" value="@Model.ExternalLinks" required />
            </div>

            <button type="submit" class="btn btn-primary">Modifier</button>
        </form>
    </div>
}
