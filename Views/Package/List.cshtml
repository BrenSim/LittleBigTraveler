@model List<LittleBigTraveler.Models.TravelClasses.Package>

@{
    Layout = "_DestinationLayout";
    ViewData["Title"] = "Liste des voyages sur mesure";
}

@section content {
    

    @if (Model.Count == 0)
    {
        <p>Aucun voyage sur mesure trouvé.</p>
    }
    else
    {
<section id="sectionDestinationCards">
    <h1 class="titrePackage">NOS PACKAGES ALLINCLUSIVE</h1>
    <div class="glassBorderBackground">

        <div class="positionDSF">

        </div>
        <div id="positionIntoSection">
            <div class="card-container">
                @foreach (var package in Model)
                {
                    <div class="glassBorderCard">
                        <div class="card">
                            @foreach (var image in @package.Travel.Destination.Images)
                            {
                                <img src="@image" alt="Image" class="card-img" />
                            }
                            <div class="card-body">
                                <h1 class="card-title">@package.Name</h1>
                                <h2 class="card-sub">@package.Travel.Destination.City, @package.Travel.Destination.Country</h2>
                                <h4>@package.Price €</h4>
                                <p class="card-sub-title">@package.Description</p>
                                <button class="card-btn">Réserver !</button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
    }

}
