@model LittleBigTraveler.ViewModels.DestinationViewModel
@using LittleBigTraveler.ViewModels
@{
    Layout = "_Layout";
    ViewData["Title"] = "Accueil";
}

<div class="jumbotron mt-4">
    <h1 class="display-4 text-center">Test de Fonctionnalités!</h1>
    <p class="lead text-center">Test des fonctionnalités implémentées dans le back</p>
</div>

<div class="text-center mb-4" style="margin-top: 20px;">
    <a href="/Destination/List" class="btn btn-primary btn-lg mr-2">Voir les destinations</a>

    @if (!User.IsInRole("Administrator"))
    {
        <a href="/Destination/AddDestination" class="btn btn-success btn-lg disabled">Ajouter une destination</a>
    }
    else
    {
        <a href="/Destination/AddDestination" class="btn btn-success btn-lg">Ajouter une destination</a>
    }
</div>


<div class="container">
    <h2 class="text-center">Rechercher une destination</h2>
    <form method="get" action="/Destination/FindDestinations">
        <div class="form-row justify-content-center">
            <div class="col-6">
                <input type="text" class="form-control rounded-pill" placeholder="Recherche de destinations par Pays ou Ville" name="query">
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary rounded-pill">Rechercher</button>
            </div>
        </div>
    </form>
</div>

<div class="text-center mb-4" style="margin-top: 40px;">
    <a href="/Service/List" class="btn btn-primary btn-lg mr-2">Voir les services</a>
    <a href="/Service/AddService" class="btn btn-success btn-lg">Ajouter un service</a>
</div>

<div class="container">
    <h2 class="text-center">Rechercher un service</h2>
    <form method="get" action="/Service/FindServices">
        <div class="form-row justify-content-center">
            <div class="col-6">
                <input type="text" class="form-control rounded-pill" placeholder="Recherche de services par Nom, Localisation, Type ou Style" name="query">
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary rounded-pill">Rechercher</button>
            </div>
        </div>
    </form>
</div>

<div class="text-center mb-4" style="margin-top: 40px;">
    <a href="/User/List" class="btn btn-primary btn-lg mr-2">Voir les utilisateurs</a>
    <a href="/User/AddCustomer" class="btn btn-success btn-lg">Créer un compte client</a>
    <a href="/User/AddPartner" class="btn btn-success btn-lg">Créer un compte partenaire</a>
    <a href="/User/AddAdministrator" class="btn btn-success btn-lg">Créer un compte administrateur</a>
    @if (User.Identity.IsAuthenticated)
    {
        <a href="/User/Profile" class="btn btn-info btn-lg mr-2">Mon Profil</a>
        <a href="/User/LogOut" class="btn btn-danger btn-lg">Déconnexion</a>
    }
    else
    {
        <a href="/User/LogIn" class="btn btn-primary btn-lg">Connexion Client</a>
    }
</div>


<div class="container">
    <h2 class="text-center">Créer un voyage sur mesure</h2>
    <form method="get" action="/Destination/List">
        <button type="submit" class="btn btn-primary btn-lg">Créer un voyage sur mesure</button>
    </form>
</div>

<div class="container">
    <h2 class="text-center">Voir les voyages sur mesure créés</h2>
    <form method="get" action="/Package/List">
        <button type="submit" class="btn btn-primary btn-lg">Voir les voyages sur mesure créés</button>
    </form>
</div>

<div class="container">
    <h2 class="text-center">Créer un voyage surprise</h2>
    <form method="post" action="/Package/CreateSurprisePackage">
        <button type="submit" class="btn btn-primary btn-lg">Créer un voyage surprise</button>
    </form>
</div>

<div class="container">
    <h2 class="text-center">Rechercher un Package</h2>
    <form method="get" action="/Package/SearchPackages">
        <div class="form-row justify-content-center">
            <div class="col-2">
                <input type="text" class="form-control rounded-pill" placeholder="Destination (facultatif)" name="destination">
            </div>
            <div class="col-2">
                <input type="number" class="form-control rounded-pill" placeholder="Mois de départ (facultatif)" name="departureMonth" min="1" max="12" step="1" value="">
            </div>
            <div class="col-2">
                <input type="number" class="form-control rounded-pill" placeholder="Prix min (facultatif)" name="minPrice" step="0.01" value="">
            </div>
            <div class="col-2">
                <input type="number" class="form-control rounded-pill" placeholder="Prix max (facultatif)" name="maxPrice" step="0.01" value="">
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary rounded-pill">Rechercher</button>
            </div>
        </div>
    </form>
</div>



