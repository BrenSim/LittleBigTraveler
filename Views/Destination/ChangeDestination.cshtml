@model LittleBigTraveler.ViewModels.DestinationViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Modification d'une destination";
}

@section content {
    <div class="container">
        <h1 class="text-center">Modifier une destination</h1>

        <form method="post" action="/Destination/ChangeDestinations/@Model.Id">

            <input type="hidden" name="Id" value="@Model.Id" />

            <div class="form-group">
                <label for="Country">Pays :</label>
                <input type="text" id="Country" name="Country" class="form-control" value="@Model.Country" required />
            </div>

            <div class="form-group">
                <label for="City">Ville :</label>
                <input type="text" id="City" name="City" class="form-control" value="@Model.City" required />
            </div>

            <div class="form-group">
                <label for="Description">Description :</label>
                <textarea id="Description" name="Description" class="form-control" required>@Model.Description</textarea>
            </div>

            <div class="form-group">
                <label for="Style">Style :</label>
                <input type="text" id="Style" name="Style" class="form-control" value="@Model.Style" required />
            </div>

            <div class="form-group">
                <label for="Images">Images :</label>
                <input type="file" id="Images" name="Images" class="form-control-file" multiple />
            </div>

            <div class="form-group">
                <label for="Link">Lien externe :</label>
                <input type="text" id="Link" name="Link" class="form-control" value="@Model.ExternalLinks" required />
            </div>

            <button type="submit" class="btn btn-primary">Modifier</button>
        </form>
    </div>
}
