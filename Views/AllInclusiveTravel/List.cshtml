@model List<LittleBigTraveler.Models.TravelClasses.AllInclusiveTravel>

@{
    Layout = "_Layout";
    ViewData["Title"] = "List des voyages tout compris";
}

@section content {
    <h1 class="text-center">List des voyages tout compris</h1>

    @if (Model.Count == 0)
    {
        <p>No All Inclusive Travels found.</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Travel ID</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.TravelId</td>
                        <td>
                            <a href="/AllInclusiveTravel/EditAllInclusiveTravel/@item.Id" class="btn btn-secondary">Modifier</a>
                            <a href="/AllInclusiveTravel/DeleteAllInclusiveTravel/@item.Id" class="btn btn-danger">Supprimer</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <div class="text-center mt-4">
        <a href="/Home/IndexTEST" class="btn btn-primary">Accueil</a>
    </div>
}
