@model List<LittleBigTraveler.Models.UserClasses.User>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Liste des utilisateurs";
}

@section content {
    <h1 class="text-center">Liste des utilisateurs</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Email</th>
                <th>Adresse</th>
                <th>Téléphone</th>
                <th>Date de naissance</th>
                <th>Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.LastName</td>
                    <td>@user.FirstName</td>
                    <td>@user.Email</td>
                    <td>@user.Address</td>
                    <td>@user.PhoneNumber</td>
                    <td>@user.BirthDate.ToShortDateString()</td>
                    <td>@user.UserType</td>
                    <td>
                        <a href="/User/Edit/@user.Id" class="btn btn-secondary mr-2">Modifier</a>
                        <a href="/User/Delete/@user.Id" class="btn btn-danger">Supprimer</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center mt-4">
        <a href="/Home/Index" class="btn btn-primary">Retour à l'accueil</a>
    </div>
}