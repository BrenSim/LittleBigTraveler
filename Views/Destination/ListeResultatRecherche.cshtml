@model LittleBigTraveler.ViewModels.DestinationViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Résultats de recherche";
}

@section content {
    <h1 class="text-center">Résultats de recherche</h1>

    @if (Model.Destinations.Count == 0)
    {
        <p>Aucun résultat trouvé.</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Pays</th>
                    <th>Ville</th>
                    <th>Description</th>
                    <th>Style</th>
                    <th>Images</th>
                    <th>Liens</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var destination in Model.Destinations)
                {
                    <tr>
                        <td>@destination.Country</td>
                        <td>@destination.City</td>
                        <td>@destination.Description</td>
                        <td>@destination.Style</td>
                        <td>
                            @foreach (var image in destination.Images)
                            {
                                <img src="@image" alt="Image" class="img-thumbnail" />
                            }
                        </td>
                        <td>@destination.ExternalLinks</td>
                        <td>
                            <a href="/Destination/ModiDestination/@destination.Id" class="btn btn-secondary mr-2">Modifier</a>
                            <a href="/Destination/SuppDestination/@destination.Id" class="btn btn-danger">Supprimer</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <div class="text-center mt-4">
        <a href="/Home/Index" class="btn btn-primary">Retour à l'accueil</a>
    </div>
}
